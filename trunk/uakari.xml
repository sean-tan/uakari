<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="uakari" default="all">
  
  
  <property file="uakari.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- The task requires the following libraries from IntelliJ IDEA distribution: -->
  <!--   javac2.jar; jdom.jar; asm.jar; asm-commons.jar -->
  <taskdef name="javac2" classname="com.intellij.ant.Javac2"/>
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
    <exclude name="**/.sbas/**"/>
    <exclude name="**/.IJI.*/**"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
  </patternset>
  
  <!-- Modules -->
  
  
  <!-- Module uakari -->
  
  <dirname property="module.uakari.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.uakari" value="${compiler.args}"/>
  
  <property name="uakari.output.dir" value="${module.uakari.basedir}/classes/production/uakari"/>
  <property name="uakari.testoutput.dir" value="${module.uakari.basedir}/classes/test/uakari"/>
  
  <path id="uakari.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="uakari.module.classpath">
    <pathelement location="${module.uakari.basedir}/lib/nekohtml-0.9.5.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/commons-lang-2.2.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/commons-io-1.3.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/jaxen-1.1.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/commons-logging-1.1.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/looks-2.0.4.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/xercesImpl-2.6.2.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/nekohtml.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/commons-httpclient-3.0.1.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/xercesImpl.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/commons-httpclient-3.1-beta1.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/htmlunit-1.11.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/xmlParserAPIs-2.6.2.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/commons-codec-1.3.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/js.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/swingx-2007_05_27.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/js-1.6R5.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/httpunit-1.6.2.jar"/>
    <pathelement location="${module.uakari.basedir}/lib/commons-collections-3.2.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.uakari">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.uakari">
    <patternset refid="excluded.from.module.uakari"/>
  </patternset>
  
  <path id="uakari.module.sourcepath">
    <dirset dir="${module.uakari.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.uakari" depends="compile.module.uakari.production,compile.module.uakari.tests" description="Compile module uakari"/>
  
  <target name="compile.module.uakari.production" description="Compile module uakari; production classes">
    <mkdir dir="${uakari.output.dir}"/>
    <javac2 destdir="${uakari.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.uakari}"/>
      <bootclasspath refid="uakari.module.bootclasspath"/>
      <classpath refid="uakari.module.classpath"/>
      <src refid="uakari.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.uakari"/>
    </javac2>
    
    <copy todir="${uakari.output.dir}">
      <fileset dir="${module.uakari.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.uakari.tests" depends="compile.module.uakari.production" description="compile module uakari; test classes" unless="skip.tests"/>
  
  <target name="clean.module.uakari" description="cleanup module">
    <delete dir="${uakari.output.dir}"/>
    <delete dir="${uakari.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.uakari" description="cleanup all"/>
  
  <target name="all" depends="init, clean, compile.module.uakari" description="build all"/>
</project>